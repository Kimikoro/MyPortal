<%= stylesheet_link_tag "css/mains-index", :media => "all" %>
<div class="main-index-container">
<%= render 'users/header' %>

<p id="notice"><%= notice %></p>

<div class="main-twitter-container"></div>

<div class="main-facebook-container"></div>

<div class="main-rss-container"></div>



<h1>Mains</h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @mains.each do |main| %>
      <tr>
        <td><%= link_to 'Show', main %></td>
        <td><%= link_to 'Edit', edit_main_path(main) %></td>
        <td><%= link_to 'Destroy', main, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Main', new_main_path %>

</div>